		<input asp-for="Name" readonly disabled />

		<label asp-for="IsComplite">is Complite?</label>
		<input asp-for="IsComplite" type="checkbox" />
	</div>

	<div class="field">
		<label asp-for="Name">Task</label>
		<input asp-for="Name" readonly disabled />

		<label asp-for="IsComplite">is Complite?</label>
		<input asp-for="IsComplite" type="checkbox" />
	</div>

	<div class="field">
		<label asp-for="Name">Task</label>
		<input asp-for="Name" readonly disabled />

		<label asp-for="IsComplite">is Complite?</label>
		<input asp-for="IsComplite" type="checkbox" />
	</div>
	<div>
		<button type="button" id="addTask">Add Task</button>
		<button type="button" id="updateTask">Change Task</button>
		<button type="button" id="deleteTask">Delete Task</button>
	</div>
</form>
</div>
</div>
</body>

